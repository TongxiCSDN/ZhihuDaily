<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivTheme"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:src="@mipmap/mq_ic_emoji_normal"/>

    <TextView
        android:id="@+id/tvTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivTheme"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        style="@style/NavigationHeadText"
        android:text="了解自己和别人"/>

    <LinearLayout
        android:id="@+id/llThemeEditor"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/ivTheme"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主编"
            android:padding="5dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</RelativeLayout>